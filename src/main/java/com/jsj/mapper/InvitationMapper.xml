<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jsj.mapper.InvitationMapper">

    <resultMap id="InvitationUserCommunityResultMap" type="InvitationUserCommunity">
        <id column="id" property="id"/>
        <result column="community_id" property="communityId"/>
        <result column="user_id" property="userId"/>
        <result column="title" property="title"/>
        <result column="content" property="content"/>
        <result column="time" property="time"/>
        <!--关联用户信息-->
        <result column="username" property="username"/>
        <!--关联社区信息-->
        <association property="community" javaType="Community">
            <id column="id" property="id"/>
            <result column="name" property="name"/>
            <result column="introduction" property="introduction"/>
        </association>
    </resultMap>

    <!--  查询一周内评论数最多的帖子  -->
    <select id="getTopInvitation" resultMap="InvitationUserCommunityResultMap">
        SELECT
            invitation.*,
            community.`name`,
            COUNT(comment.`invitation_id`)
        FROM
        invitation,
        comment,
        community
        WHERE invitation.`id` = comment.`invitation_id`
        AND invitation.`community_id` = community.`id`
--         AND date_sub(curdate(), interval 7 day) &lt;= date(comment.time)
        GROUP BY comment.`invitation_id`
        ORDER BY COUNT(comment.`invitation_id`) DESC
        LIMIT 10
    </select>

    <select id="getInvitationUserById" parameterType="int" resultType="InvitationUser">
        SELECT
            invitation.*,
            user.`username`,
            user.`avatar` AS userAvatar
        FROM
            invitation
            INNER JOIN user
                ON user.`id` = invitation.`user_id`
                AND invitation.`id` = #{invitationId}
    </select>

    <select id="getInvitationUsersByCommunityId" parameterType="int" resultType="InvitationUser">
        SELECT
            invitation.*,
            user.`username`
        FROM
            invitation
            INNER JOIN user
                ON user.`id` = invitation.`user_id`
                AND invitation.`community_id` = #{communityId}
        ORDER BY TIME DESC
    </select>

    <insert id="insert" parameterType="Invitation">
        INSERT INTO invitation(community_id,user_id,title,time,content)
        VALUES(#{communityId},#{userId},#{title},#{time},#{content})
    </insert>

</mapper>